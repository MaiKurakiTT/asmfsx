<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="#fff"    android:orientation="vertical" >    <include        android:layout_width="fill_parent"        android:layout_height="wrap_content"        layout="@layout/il_title" />    <View        android:layout_width="fill_parent"        android:layout_height="15dp"        android:background="@color/view_module" />    <RelativeLayout        android:id="@+id/il_setting_logoutclick"        android:layout_width="fill_parent"        android:layout_height="45dp"        android:background="@drawable/layoutclick_style"        android:clickable="true" >        <ImageView            android:layout_width="25dp"            android:layout_height="25dp"            android:layout_centerVertical="true"            android:layout_marginLeft="10dp"            android:src="@drawable/ic_close" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentLeft="true"            android:layout_centerVertical="true"            android:layout_marginLeft="70dp"            android:text="注销并退出"            android:textColor="@color/it_normal_textcolor"            android:textSize="@dimen/it_il_personal_list" />        <ImageView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentRight="true"            android:layout_centerVertical="true"            android:layout_marginRight="15dp"            android:src="@drawable/ic_advance" />    </RelativeLayout>    <View        android:layout_width="fill_parent"        android:layout_height="10dp"        android:background="@color/view_module" />    <RelativeLayout        android:id="@+id/il_setting_aboutclick"        android:layout_width="fill_parent"        android:layout_height="45dp"        android:background="@drawable/layoutclick_style"        android:clickable="true" >        <ImageView            android:layout_width="25dp"            android:layout_height="25dp"            android:layout_centerVertical="true"            android:layout_marginLeft="10dp"            android:src="@drawable/ic_about" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentLeft="true"            android:layout_centerVertical="true"            android:layout_marginLeft="70dp"            android:text="关于"            android:textColor="@color/it_normal_textcolor"            android:textSize="@dimen/it_il_personal_list" />        <ImageView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentRight="true"            android:layout_centerVertical="true"            android:layout_marginRight="15dp"            android:src="@drawable/ic_advance" />    </RelativeLayout><View        android:layout_width="fill_parent"        android:layout_height="10dp"        android:background="@color/view_module" />    </LinearLayout>