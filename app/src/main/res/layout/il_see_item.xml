<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="wrap_content"    android:layout_height="wrap_content"    android:background="@drawable/image_background"    android:gravity="center"    android:orientation="vertical" >    <LinearLayout        android:id="@+id/id_see_itembg"        android:layout_width="100dp"        android:layout_height="100dp"        android:gravity="center"        android:orientation="vertical" >        <ImageView            android:id="@+id/id_see_itemimg"            android:layout_width="50dp"            android:layout_height="50dp"            android:background="@drawable/ic_found_countdown_icon" />        <TextView            android:id="@+id/id_see_itemstr"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginTop="8dp"            android:text="考试倒计时"            android:textSize="12sp" />    </LinearLayout></LinearLayout>