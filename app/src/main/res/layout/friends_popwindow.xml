<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="180dp"    android:layout_height="wrap_content"    android:background="@color/half_none"    android:orientation="horizontal" >    <RelativeLayout        android:id="@+id/friends_popwindows_good"        android:layout_width="90dp"        android:layout_height="wrap_content"        android:background="@color/none" >        <ImageView            android:id="@+id/friends_pop_iv1"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:paddingLeft="7dp"            android:src="@drawable/ic_launcher" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerVertical="true"            android:layout_toRightOf="@id/friends_pop_iv1"            android:text="赞" />    </RelativeLayout>    <RelativeLayout        android:id="@+id/friends_popwindows_remark"        android:layout_width="90dp"        android:layout_height="wrap_content" >        <ImageView            android:id="@+id/friends_pop_iv2"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:paddingLeft="5dp"            android:src="@drawable/ic_launcher" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerVertical="true"            android:layout_toRightOf="@id/friends_pop_iv2"            android:text="评论" />    </RelativeLayout></LinearLayout>