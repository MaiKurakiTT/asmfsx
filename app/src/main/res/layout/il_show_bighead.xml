<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="#000000"    android:id="@+id/il_show_bighead_parent"    android:clickable="true"     >    <ImageView         android:id="@+id/ic_show_bighead_head"        android:layout_width="fill_parent"        android:layout_height="300dp"        android:src="@drawable/ic_inithead"        android:background="#000000"        android:layout_centerHorizontal="true"        android:layout_marginTop="80dp"        />    <ImageView         android:id="@+id/ic_show_bighead_more"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:src="@drawable/ic_point_more"        android:layout_alignParentBottom="true"        android:layout_marginBottom="20dp"        android:layout_alignParentRight="true"        android:layout_marginRight="20dp"        android:clickable="true"        /></RelativeLayout>