<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="wrap_content"    android:layout_height="wrap_content">    <com.hsd.fsxasm.widget.CircleImageView        android:id="@+id/likelist_head"        android:layout_width="70dp"        android:layout_height="70dp"        android:layout_gravity="center"        android:padding="5dp"        android:src="@drawable/ic_inithead"         app:border_color="@color/circleview_white" />    <RelativeLayout         android:id="@+id/likelist_text_parent"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:padding="5dp"        android:layout_toRightOf="@id/likelist_head" >        <TextView            android:id="@+id/likelist_name"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="小明是否了解了"            android:layout_marginLeft="10dp"            android:textSize="20sp"            android:textColor="#000" />        <TextView            android:id="@+id/likelist_sex"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignLeft="@id/likelist_name"            android:layout_below="@+id/likelist_name"            android:textSize="18sp"            android:layout_marginTop="10dp"            android:textColor="#000"             android:text="女"/>        <TextView             android:layout_height="wrap_content"            android:layout_width="wrap_content"            android:id="@+id/likelist_age"            android:text="16"            android:layout_alignTop="@id/likelist_sex"            android:layout_toRightOf="@id/likelist_sex"            android:textSize="18sp"            android:textColor="#000"             android:layout_marginLeft="20dp"            />                        <TextView            android:id="@+id/send_msg"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerVertical="true"            android:layout_marginRight="80dp"            android:text="和ta聊"            android:layout_alignParentRight="true"            android:textColor="@android:color/holo_orange_dark"             android:visibility="gone"/>        <TextView            android:id="@+id/like_dislike"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginRight="10dp"            android:text="互相心动"            android:layout_centerVertical="true"             android:layout_alignParentRight="true"            android:textColor="@android:color/holo_orange_dark"             android:visibility="gone"/>    </RelativeLayout>    <ImageView        android:id="@+id/likelist_nolike_bt"        android:layout_width="25dp"        android:layout_height="25dp"        android:layout_alignParentRight="true"        android:layout_centerVertical="true"        android:layout_marginRight="60dp"        android:focusable="false"        android:src="@drawable/ic_removelike" />     <ImageView        android:id="@+id/likelist_chat_bt"        android:layout_width="25dp"        android:layout_height="25dp"        android:layout_alignParentRight="true"        android:layout_centerVertical="true"        android:layout_marginRight="15dp"        android:focusable="false"        android:src="@drawable/ic_chatwithlike" /></RelativeLayout>