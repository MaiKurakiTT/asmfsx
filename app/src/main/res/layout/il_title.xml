<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical" >    <RelativeLayout        android:id="@+id/id_layout_r1"        android:layout_width="match_parent"        android:layout_height="45dp"        android:background="@color/title_green"         >        <ImageView            android:id="@+id/id_title_back"            android:layout_width="50dp"            android:layout_height="wrap_content"            android:layout_alignParentLeft="true"            android:layout_centerVertical="true"            android:src="@drawable/ic_back"             android:visibility="gone"            />        <TextView            android:id="@+id/id_title"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerInParent="true"            android:text="加载中..."            android:textColor="@color/text_white"            android:textSize="18sp" />        <!-- 这里将来要替换成imageview -->        <TextView            android:id="@+id/id_title_help"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentRight="true"            android:layout_centerInParent="true"            android:paddingRight="15dp"            android:text="测试"            android:textColor="@color/text_white"             android:visibility="gone"            android:clickable="true" />                        <com.hsd.fsxasm.widget.SegmentView             android:id="@+id/ii_segment"            android:layout_width="120dp"            android:layout_height="40dp"            android:layout_centerInParent="true"             android:paddingTop="4dp"            android:visibility="gone"            />            </RelativeLayout></LinearLayout>