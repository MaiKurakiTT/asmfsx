<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:orientation="vertical"    android:id="@+id/il_showbighead_singlechoice_parent"     >    <View         android:layout_width="fill_parent"        android:layout_height="0.1dp"        android:background="@color/view_notfill"        />    <RelativeLayout         android:id="@+id/il_showbighead_singlechoice_sethead"        android:layout_width="fill_parent"        android:layout_height="50dp"        android:background="@drawable/layoutclick_style"        android:clickable="true"        >        <TextView             android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="@string/it_showbighead_singlechoice_sethead_sethead"            android:textColor="#3EA9FA"            android:layout_centerInParent="true"            />    </RelativeLayout>    <View         android:layout_width="300dp"        android:layout_height="0.1dp"        android:background="@color/view_module"        android:layout_gravity="center_horizontal"        />    <RelativeLayout         android:id="@+id/il_showbighead_singlechoice_close"        android:layout_width="fill_parent"        android:layout_height="50dp"        android:background="@drawable/layoutclick_style"        android:clickable="true"        >        <TextView             android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="@string/it_showbighead_singlechoice_sethead_close"            android:textColor="#3EA9FA"            android:layout_centerInParent="true"            />    </RelativeLayout>     <View         android:layout_width="fill_parent"        android:layout_height="0.1dp"        android:background="@color/view_notfill"        /></LinearLayout>