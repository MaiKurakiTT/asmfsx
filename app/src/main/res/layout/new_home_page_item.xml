<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="@color/title_white"    android:descendantFocusability="blocksDescendants"    android:orientation="vertical" >    <!-- 朋友圈的item,仅支持四张图片的显示 -->    <RelativeLayout        android:layout_width="fill_parent"        android:layout_height="wrap_content" >        <com.hsd.fsxasm.widget.CircleImageView            android:id="@+id/head_image"            android:layout_width="50dp"            android:layout_height="50dp"            android:layout_marginLeft="10dp"            android:layout_marginTop="10dp"            android:src="@drawable/ic_inithead"            app:border_color="@color/circleview_white"             >        </com.hsd.fsxasm.widget.CircleImageView>        <TextView            android:id="@+id/home_page_item_name"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignTop="@id/head_image"            android:layout_marginLeft="10dp"            android:layout_marginTop="1dp"            android:layout_toRightOf="@id/head_image"            android:text="昵称"            android:textSize="17sp"            android:textColor="@color/title_green" />        <TextView            android:id="@+id/home_page_item_content"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignLeft="@id/home_page_item_name"            android:layout_below="@id/home_page_item_name"            android:layout_marginTop="5dp"            android:lineSpacingExtra="3dp"            android:maxWidth="250dp"            android:text="撒打开就过了圣诞节给is的收到啦刚看见了的快速索拉卡的国际撒个sdfgsg撒大哥说回复的任务"            android:textSize="16sp"            android:textColor="@color/black" />    </RelativeLayout>    <RelativeLayout        android:id="@+id/home_page_item_rl"        android:layout_width="fill_parent"        android:layout_height="wrap_content"        android:layout_marginLeft="70dp"        android:layout_marginTop="10dp" >        <ImageView            android:id="@+id/friends_image1"            android:layout_width="100dp"            android:layout_height="100dp"            android:scaleType="center"            android:src="@drawable/ic_test_2"            android:visibility="visible" >        </ImageView>        <ImageView            android:id="@+id/friends_image2"            android:layout_width="100dp"            android:layout_height="100dp"            android:layout_marginLeft="5dp"            android:layout_toRightOf="@id/friends_image1"            android:scaleType="center"            android:src="@drawable/ic_test_2"            android:visibility="visible" >        </ImageView>        <ImageView            android:id="@+id/friends_image3"            android:layout_width="100dp"            android:layout_height="100dp"            android:layout_below="@id/friends_image1"            android:layout_marginTop="5dp"            android:scaleType="center"            android:src="@drawable/ic_test_2"            android:visibility="visible" >        </ImageView>        <ImageView            android:id="@+id/friends_image4"            android:layout_width="100dp"            android:layout_height="100dp"            android:layout_below="@id/friends_image2"            android:layout_marginLeft="5dp"            android:layout_marginTop="5dp"            android:layout_toRightOf="@id/friends_image3"            android:scaleType="center"            android:src="@drawable/ic_test_2"            android:visibility="visible" >        </ImageView>    </RelativeLayout>    <RelativeLayout        android:layout_width="fill_parent"        android:layout_height="wrap_content"        android:layout_marginLeft="70dp"        android:layout_marginTop="10dp" >        <TextView            android:id="@+id/home_page_item_time"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerVertical="true"            android:text="45秒前"            android:textColor="#88000000"            android:textSize="15sp" />        <ImageView            android:id="@+id/home_page_item_comment"            android:layout_width="20dp"            android:layout_height="20dp"            android:layout_alignParentRight="true"            android:layout_centerVertical="true"            android:layout_marginRight="120dp"            android:src="@drawable/ic_comment" />        <TextView            android:id="@+id/home_page_item_commentcounts"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentRight="true"            android:layout_centerVertical="true"            android:layout_marginRight="100dp"            android:text="16"            android:textColor="#88000000"            android:textSize="14sp" />        <ImageView            android:id="@+id/home_page_item_good"            android:layout_width="20dp"            android:layout_height="20dp"            android:layout_alignParentRight="true"            android:layout_centerVertical="true"            android:layout_marginRight="50dp"            android:src="@drawable/ic_good" />        <TextView            android:id="@+id/home_page_item_goodcounts"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentRight="true"            android:layout_centerVertical="true"            android:layout_marginRight="30dp"            android:text="23"            android:textColor="#88000000"            android:textSize="14sp" />    </RelativeLayout>        <View         android:layout_width="fill_parent"        android:layout_height="1dp"        android:layout_marginLeft="70dp"        android:layout_marginTop="10dp"        android:background="@color/view_module"        android:visibility="gone"        />        <LinearLayout        android:id="@+id/lin"         android:layout_width="fill_parent"        android:layout_height="wrap_content"        android:layout_marginLeft="70dp"        android:layout_marginTop="10dp"        android:layout_marginBottom="10dp"        android:orientation="vertical"        >    </LinearLayout></LinearLayout>